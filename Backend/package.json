{
  "name": "barbershop-backend",
  "version": "1.0.0",
  "description": "Backend API pour le site web de barbershop moderne",
  "main": "server.js",
  "scripts": {
    "start": "node scripts/start-production.js",
    "start:clean": "node scripts/start-clean.js",
    "dev": "nodemon server.js",
    "dev:mock": "node scripts/start-without-db.js",
    "test": "jest",
    "migrate": "node scripts/migrate.js",
    "init-db": "node scripts/init-db.js",
    "init-db-docker": "node scripts/init-db-docker.js",
